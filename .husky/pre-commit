# Run tests
npm run test:ci

# Check test exit code
if [ $? -ne 0 ]; then
  echo "❌ Tests failed. Please fix the failing tests and try again."
  exit 1
fi

# Run lint-staged
npx lint-staged

# Check exit code
if [ $? -ne 0 ]; then
  echo "❌ Code quality checks failed. Please fix the issues and try again."
  exit 1
fi

echo "✅ All quality checks passed!"
